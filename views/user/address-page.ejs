<%- include('../user/layout/user-header.ejs') -%>

  <div class="container-fluid ">

    <div class="row">

      <div class="pl-5 pr-5 align-middle col-xl-12">

        <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Address</span>
        </h5>
        <div class="form-group">
          <a href="/newAddress" class="btn btn-success float-right px-3 rounded"> Add Address</a>
        </div><br><br>
        <% userAddress.forEach((x)=> { %>
          <div class="bg-light p-30 mb-5">
            <div class="border-bottom">

              <div class="card bg-light ext-white   " style="width: auto; height: auto;">
                <div class="form-check checkbox-xl ml-auto ">


                </div>
                <div class="card-body text-left">
                  <table class="table">
                    <h2>Address</h2>

                    <tr>
                      <th scope="col">First Name :</th>
                      <th scope="col">
                        <%= x.firstName %>
                      </th>
                    </tr>
                    <tr>
                      <th scope="col">Last Name :</th>
                      <th scope="col">
                        <%= x.lastName %>
                      </th>
                    </tr>
                    <tr>
                      <th scope="col">Email :</th>
                      <th scope="col">
                        <%= x.email %>
                      </th>
                    </tr>
                    <tr>
                      <th scope="col">Phone :</th>
                      <th scope="col">
                        <%= x.mobNumber %>
                      </th>
                    </tr>
                    <tr>
                      <th scope="col">Home Address :</th>
                      <th scope="col">
                        <%= x.homeaddress %>
                      </th>
                    </tr>
                    <tr>
                      <th scope="col">Country :</th>
                      <th scope="col">
                        <%= x.country %>
                      </th>
                    </tr>
                    <tr>
                      <th scope="col">City :</th>
                      <th scope="col">
                        <%= x.city %>
                      </th>
                    </tr>
                    <tr>
                      <th scope="col">State :</th>
                      <th scope="col">
                        <%= x.state %>
                      </th>
                    </tr>
                    <tr>
                      <th>
                        <button onclick="updateAdreess('<%= x._id %>')" class=" bg-warning px-3 py-2 rounded "
                          type="button" value="Submit"
                          style="text-decoration: none; font-weight: bold; color: #fff; border-color: #fff;"> Update
                          </a>
                          <button onclick="deleteAddress('<%= x._id%>')" class=" bg-danger px-3 py-2 rounded "
                            type="button" value="Submit"
                            style="text-decoration: none; font-weight: bold; color:#fff; border-color: #fff;">Delete</button>
                      </th>
                    </tr>
                  </table>
                </div>
              </div>

            </div>
          </div>

          <% }) %>


      </div>

    </div>

  </div>


  <%- include('../user/layout/user-footer.ejs') -%>