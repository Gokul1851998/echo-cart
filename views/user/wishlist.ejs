<%- include('../user/layout/user-header.ejs') -%>

    <div class="container-fluid">
        <h4 class="section-title position-relative text-uppercase mb-3 ml-5"><span class="bg-secondary pr-3">Your
                Wishlist </span></h4>
        <div id="productCard" class="row px-xl-5">
            <% if(listCount==0){ %>
                <div class="container-fluid  mt-100 ">
                    <div class="row">

                        <div class="col-md-12">



                            <div class="card-body cart">
                                <div class="col-sm-12 empty-cart-cls text-center">

                                    <img src="https://www.our-eshop.com/frontend/assets/images/no-wish-list.png"
                                        width="300" height="300" class="img-fluid mr-3">
                                    <!-- <h3><strong>Your Wishlist is Empty</strong></h3> -->
                                    <h4>Add something to make me happy :)</h4>
                                    <a href="/shopping" class="btn btn-primary cart-btn-transform m-3"
                                        data-abc="true">continue shopping</a>


                                </div>
                            </div>



                        </div>

                    </div>

                </div>
                <% }else{ %>
                    <table class="table table-light table-borderless table-hover text-center mb-0">
                        <thead class="thead-dark">
                            <tr>
                                <th>No</th>
                                <th></th>
                                <th>Products</th>
                                <th>Price</th>
                                <th>Add to Cart</th>

                                <th>Remove</th>
                            </tr>
                        </thead>
                        <% wish.forEach((obj,index)=>{ %>
                            <tbody class="align-middle">

                                <tr>
                                    <td>
                                        <%= index+1 %>
                                    </td>
                                    <td><img src="/images/product/<%= obj.Image[0] %>" alt="" style="width: 50px;"></td>
                                    <td class="align-middle">
                                        <%= obj.productName %>
                                    </td>
                                    <td class="align-middle">â‚¹<%= obj.price %>
                                    </td>
                                    <td class="align-middle">

                                        <button onclick="addToCart('<%= obj._id %>')"
                                            class="btn btn-primary px-3 rounded"><i
                                                class="fa fa-shopping-cart mr-1 "></i> </button>

                                    </td>

                                    <td class="align-middle">
                                        <button onclick="deleteWishlist('<%= obj._id %>')"
                                            class="btn btn-sm btn-danger"><i class="fa fa-times"></i></button>
                                    </td>
                                </tr>







                            </tbody>
                            <% }) %>
                    </table>
                    <% } %>

        </div>
    </div>
    <%- include('../user/layout/user-footer.ejs') -%>