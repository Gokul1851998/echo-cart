
  

<%- include('../user/layout/user-header.ejs') -%>


    <div class="container-fluid">
        <h4 class="section-title position-relative text-uppercase mb-3 ml-5"><span class="bg-secondary pr-3">Your
                Orders</span></h4>
        </div>
    
        <div class="container py-3 " style="min-height: 80vh !important;">
          <div class="row justify-content-center  ">
            <div class="col-md-12 col-xl-12">
                <% orders.forEach((obj)=>{%>
              <div class=" shadow-0 border rounded-3 bg-light w-100 mb-3">
          
                <div class="card-body">
                  <div class="row">
                    <div class="col-md-12 col-lg-3 col-xl-3 mb-4 mb-lg-0">
                        <% obj.items.forEach((ob,index)=>{ %>
                      <div class="bg-image hover-zoom ripple rounded ripple-surface ">
                        
                       <h6 class=""><%=index+1%> <%=ob.productId.productName %></h6>
                     
                      </div>
                      <%})%>
                    </div>
                   
                    <div class="col-md-6 col-lg-3 col-xl-3 border-sm-start-none border-start">
                      <div class="d-flex flex-row align-items-center mb-1">
                        <h4 class="mb-1 me-1">â‚¹ <%= obj.totalAmount %></h4>
                        
                      </div>
                      <h6 class="text-info">Free shipping</h6>
                    
                      <%if(obj.orderStatus=='Canceled'){%>
                        <h6 class="text-danger"><%= obj.orderStatus %></h6>
                        <%}else{%>
                      <h6 class="text-success"><%= obj.orderStatus %></h6>
                      <%}%>
                      <h6><%= obj.createdAt.toLocaleDateString() %></h6>
                      <h6>Total Product :  <%=obj.totalProduct %> </h6>

                    </div>

                    <div class="col-md-6 col-lg-3 col-xl-6 border-sm-start-none border-start">
                        <span class="">Order ID : <%= obj._id %></span>
                        
                        <div class="float-right ">
                            
                            <a href="/viewOrder/<%= obj._id %>" class="float-rigth"><button class="btn btn-success btn-md rounded" type="button">Details</button></a>
                        </div>
                        <br><br><br>
                        <div class="float-right">
                           <a href="/cancelOrder/<%= obj._id %>"> <button class="btn btn-danger btn-md mt-2 rounded" type="button">
                                Cancel
                              </button></a>
                        </div>
                      </div>

                    
                  </div>
                  
                </div>
            
              </div>
              
              <%})%>
            </div>
          </div>
         
        </div>
  
       
    <%- include('../user/layout/user-footer.ejs') -%>
    