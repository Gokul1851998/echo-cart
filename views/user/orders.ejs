<%- include('../user/layout/user-header.ejs') -%>


    <div class="container-fluid">
        <h4 class="section-title position-relative text-uppercase mb-3 ml-5"><span class="bg-secondary pr-3">Your
                Orders</span></h4>
        <div id="productCard" class="row px-xl-5">
            <div class="col-lg-12 col-md-6 col-sm-12 pb-1" style="overflow-x:auto;">

                <table class="table table-light table-borderless table-hover text-center mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th>Order.No</th>
                            <th>Order Id</th>
                            <th>Date</th>

                            <th>Amount</th>
                            <th>Status</th>
                            <th>View Order</th>

                            <th>Cancel</th>
                        </tr>
                    </thead>
                    <%orders.forEach((obj,index)=>{%>
                        <tbody class="align-middle">

                            <tr>
                                <td class="align-middle">
                                    <%= index+1 %>
                                </td>
                                <td class="align-middle">
                                    <%= obj._id %>
                                </td>
                                <td class="align-middle">
                                    <%= obj.createdAt.toLocaleDateString() %>
                                </td>

                                <td class="align-middle"><span>Rs.</span>
                                    <%= obj.totalAmount %>
                                </td>
                                <td class="align-middle">
                                    <%= obj.orderStatus %>
                                </td>


                                <td class="align-middle"><a href="/viewOrder/<%= obj._id %>"
                                        class="btn btn-success">View</a> </td>

                                <td class="align-middle">
                                    <a href="/cancelOrder/<%= obj._id %> "><button onclick=""
                                            class="btn btn-sm btn-danger"><i class="fa fa-times"></i></button></a>
                                </td>
                            </tr>
                        </tbody>
                        <% }) %>
                </table>
            </div>
        </div>
    </div>

    <%- include('../user/layout/user-footer.ejs') -%>