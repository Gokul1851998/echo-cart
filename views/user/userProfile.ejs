                    </div>
                </a>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
                <a class="text-decoration-none" href="" class="btn btn-primary" data-toggle="modal"
                    data-target="#exampleModalCenter">
                    <div class="cat-item d-flex align-items-center mb-4">

                        <div class="overflow-hidden" style="width: 100px; height: 100px;">
                            <h1 class="fa fa-wallet mt-4 ml-4"></h1>
                        </div>
                        <div class="flex-fill pl-3">
                            <h5>Balance </h5>
                            <small class="text-body"></small>
                        </div>

                    </div>
                </a>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
                <a class="text-decoration-none" href="" data-toggle="modal" data-target="#exampleModal"
                    data-whatever="@getbootstrap">

                    <div class="cat-item d-flex align-items-center mb-4">

                        <div class="overflow-hidden" style="width: 100px; height: 100px;">
                            <h1 class="fa fa-user-edit mt-4 ml-4"></h1>
                        </div>
                        <div class="flex-fill pl-3">
                            <h5>Edit Profile </h5>
                            <small class="text-body"></small>
                        </div>

                    </div>
                </a>
            </div>
        </div>
    </div>






