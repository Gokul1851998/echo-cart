<%-include('../admin/layout/admin-header-layout.ejs') -%>

  <div class="col-lg">
    <div class="card">
      <div class="card-body">
        <div class="card-title"  style="color: #000;">Add Product</div>
        <hr>
        <form action="/admin/addproduct" method="post" enctype="multipart/form-data">
        


          <div class="form-group">
            <label for="input-4" style="color: #000;">Name</label>
            <input class="form-control"  id="input-4" type="text"  required name="productName">
          </div>

          <div class="form-group">
            <label for="input-5"  style="color: #000;">Category</label>
            
            <select class="group input-group form-control" name="category" id="">
            <% category.forEach((category)=>{ %>
              <option >
                <%= category.category %>
              </option>
              <% }) %>
            </select>
          </div>

          <div class="form-group">
            <label for="input-5"  style="color: #000;">Size</label>
            
            <select class="group input-group form-control" name="size" id="">
            <% size.forEach((size)=>{ %>
              <option >
                <%= size.size %>
              </option>
              <% }) %>
            </select>
          </div>

          <div class="form-group">
            <label for="input-5"  style="color: #000;">Price</label>
            <input class="form-control" id="input-5" type="tel"  required name="price">
          </div>
          
          <div class="form-group">
            <label for="input-5"  style="color: #000;">Description</label>
            <input class="form-control" id="input-5" type="tel" required name="description">
          </div>

          <div class="form-group">
            <label for="input-5"  style="color: #000;">Image</label>
            <input type="file" multiple class="form-control" id="input-5" name="Image"
              placeholder="Choose an image" />
          </div>

          <div class="form-group">
            <button type="submit" class="btn btn-success px-5"> Add Product</button>
          </div>
        </form>
      </div>
    </div>
  </div>


  <%-include('../admin/layout/admin-footer-layout') -%>